<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- This is your existing layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage">

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="305dp"
            android:layout_height="62dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="4dp"
            android:backgroundTint="#F3EDED"
            android:text="CougConnect"
            android:textColor="#AA3030"
            android:textSize="48sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btn_menu"
            android:layout_width="39dp"
            android:layout_height="45dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/icons8_menu_50"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_profile"
            android:layout_width="54dp"
            android:layout_height="67dp"
            android:layout_marginEnd="4dp"
            android:background="@null"
            android:src="@drawable/icons8_name_50"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Side menu -->
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:layout_gravity="start">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu"
            android:textStyle="bold"
            android:textColor="#AA3030"
            android:textSize="36sp"
            android:layout_gravity="center_horizontal"
            tools:layout_editor_absoluteX="170dp"
            tools:layout_editor_absoluteY="286dp" />

        <Button
            android:id="@+id/btn_org"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:backgroundTint="#B15151"
            android:text="Organizations"
            android:textSize="22sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btn_events"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:backgroundTint="#B15151"
            android:textSize="22sp"
            android:text="Events"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btn_category"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:backgroundTint="#B15151"
            android:textSize="22sp"
            android:text="Categories"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_calendar"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:backgroundTint="#B15151"
            android:textSize="22sp"
            android:text="Calendar"
            tools:layout_editor_absoluteX="154dp"
            tools:layout_editor_absoluteY="266dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>


